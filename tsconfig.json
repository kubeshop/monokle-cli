{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ES2020"],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true
  },
  "exclude": ["node_modules", "build"]
}
