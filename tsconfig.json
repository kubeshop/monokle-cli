{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ES2020", "DOM"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "test"]
}
